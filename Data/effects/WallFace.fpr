#version 400

layout( location = 0 ) out vec4 FragColor;

varying vec3 v_color;
varying vec3 v_normal;

const vec3 c_lightDirection = vec3(0, 0, -1);

void main()
{
	vec3 normal = normalize(v_normal);

	float diffValue = max(dot(-c_lightDirection, normal), 0.0);

	FragColor = vec4(v_color, 1) * diffValue;
}

