	FragColor += texture2D(u_tex, v_coords[28]) * 0.002745253000;
	FragColor += texture2D(u_tex, v_coords[29]) * 0.001602653000;
	FragColor += texture2D(u_tex, v_coords[30]) * 0.000899045200;
	
	
	//FragColor *= 2.0;
}
