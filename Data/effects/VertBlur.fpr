	FragColor += texture2D(u_tex, v_coords[21]) * 0.038905070000;
	FragColor += texture2D(u_tex, v_coords[22]) * 0.030023890000;
	FragColor += texture2D(u_tex, v_coords[23]) * 0.022264140000;
	FragColor += texture2D(u_tex, v_coords[24]) * 0.015863920000;
