#version 400

layout (location = 0) out vec4 FragColor;

uniform sampler2D u_tex;

varying vec2 v_coords[31];

void main()
{
	vec4 centerColor = texture2D(u_tex, v_coords[15]);
	if (centerColor.x >= 0.095)
	{
		FragColor = centerColor;
		return;
	}

	FragColor  = texture2D(u_tex, v_coords[ 0]) * 0.000899237300;
	FragColor += texture2D(u_tex, v_coords[ 1]) * 0.001602971000;
	FragColor += texture2D(u_tex, v_coords[ 2]) * 0.002745762000;
	FragColor += texture2D(u_tex, v_coords[ 3]) * 0.004519446000;
	FragColor += texture2D(u_tex, v_coords[ 4]) * 0.007148143000;
	FragColor += texture2D(u_tex, v_coords[ 5]) * 0.010863930000;
	FragColor += texture2D(u_tex, v_coords[ 6]) * 0.015865950000;
	FragColor += texture2D(u_tex, v_coords[ 7]) * 0.022264950000;
	FragColor += texture2D(u_tex, v_coords[ 8]) * 0.030022890000;
	FragColor += texture2D(u_tex, v_coords[ 9]) * 0.038903950000;
	FragColor += texture2D(u_tex, v_coords[10]) * 0.048441920000;
	FragColor += texture2D(u_tex, v_coords[11]) * 0.057961150000;
	FragColor += texture2D(u_tex, v_coords[12]) * 0.066640850000;
	FragColor += texture2D(u_tex, v_coords[13]) * 0.073624720000;
	FragColor += texture2D(u_tex, v_coords[14]) * 0.078161500000;
	FragColor += texture2D(u_tex, v_coords[15]) * 0.079735030000;
	FragColor += texture2D(u_tex, v_coords[16]) * 0.078161520000;
	FragColor += texture2D(u_tex, v_coords[17]) * 0.073624330000;
